<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangzeyuan.learnarithmetic.mapper.SmsLabelListMapper">
    <resultMap id="smsLabelList" type="com.zhangzeyuan.learnarithmetic.entity.SmsLabelList">
        <id column="id" property="id"></id>
    </resultMap>

    <select id="tree" resultMap="smsLabelList">
        -- 1.查询所有的子和孙节点，所以 判断 这个parentId只要在parent_list数组中，就要查出来
        select id,parent_id,title,description
        from sms_label_list where
                                json_search(parent_list,'all' ,#{parentId})  is not  null
                              and status =0
                              or #{parentId} = id;
    </select>

</mapper>